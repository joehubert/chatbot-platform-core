# =======================================================
# Chatbot Integration Test Harness - Environment Variables
# =======================================================
# Copy this file to .env and update values as needed

# =======================================================
# SERVER CONFIGURATION
# =======================================================

# Server port
PORT=3000

# Node environment (development, test)
NODE_ENV=development

# =======================================================
# TEST HARNESS SETTINGS
# =======================================================

# Enable mock responses (always true for test harness)
MOCK_RESPONSES=true

# Simulated response delay in milliseconds (for realistic testing)
RESPONSE_DELAY_MS=1000

# Default organization ID for demos
DEFAULT_ORG_ID=demo-org

# =======================================================
# WIDGET DEFAULTS
# =======================================================

# Default widget theme (corporate-blue, warm-orange, modern-purple)
DEFAULT_WIDGET_THEME=corporate-blue

# Default widget position (bottom-right, bottom-left)
DEFAULT_WIDGET_POSITION=bottom-right

# Default greeting message
DEFAULT_GREETING="Hello! How can I help you today?"

# =======================================================
# DEMO SITE CONFIGURATIONS
# =======================================================

# Corporate demo site name
CORPORATE_DEMO_NAME="Acme Corporation"

# E-commerce demo site name
ECOMMERCE_DEMO_NAME="TechShop Online"

# =======================================================
# DEVELOPMENT
# =======================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Show detailed errors in development
SHOW_DETAILED_ERRORS=true